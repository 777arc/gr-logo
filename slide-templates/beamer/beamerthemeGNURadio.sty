\mode<presentation>

%% Palette
% The actual GNU Radio orange, don't use this for text etc.:
\definecolor{grorange}{RGB}{255,105,5}

% These colours are in sync with the material design website,
% and were tested on several projectors. Use these for text,
% backgrounds etc.
% Orange 600
\definecolor{grdarkorange}{HTML}{FB8C00}
% Shades of Grey
\definecolor{grdarkgrey}{HTML}{424242} % Grey 800
\definecolor{grgrey}{HTML}{616161} % Grey 700
\definecolor{grlightgrey}{HTML}{E0E0E0} % Grey 300
\definecolor{grmediumgrey}{HTML}{bdbdbd} % Grey 400

% Blocks, items, bullets etc. are affected by this:
\useinnertheme[shadow=true]{rounded}

\setbeamercolor{head_sec}{fg=white,bg=black}
\setbeamercolor{head_logo}{fg=grorange,bg=black}
\setbeamercolor{foot_author}{fg=white,bg=grgrey}
\setbeamercolor{foot_title}{fg=white,bg=black}
\setbeamercolor{foot_page}{fg=white,bg=grgrey}

\setbeamertemplate{headline}
{%
  \leavevmode%
  \hbox{

    \hspace{-5pt}
    \begin{beamercolorbox}[wd=.34\paperwidth,ht=5ex,dp=1.125ex,right]{head_sec}%
      \usebeamerfont{author in head/foot}\insertsectionhead\hspace{5pt}
    \end{beamercolorbox}%

    \begin{beamercolorbox}[wd=.34\paperwidth,ht=5ex,dp=1.125ex,left]{head_sec}%
      \usebeamerfont{author in head/foot}\hspace{5pt}\insertsubsectionhead
    \end{beamercolorbox}%

    \begin{beamercolorbox}[wd=.333\paperwidth,ht=5ex,dp=1.125ex,right]{head_logo}%
      \vspace{-2pt}
      \includegraphics[height=0.5cm]{gnuradio_logo.pdf}\hspace{8pt}
    \end{beamercolorbox}%
  }%
  \vskip0pt%
}

\setbeamertemplate{footline}
{%
  \leavevmode%
  \hbox{

    \hspace{-5pt}
    \begin{beamercolorbox}[wd=.41\paperwidth,ht=2.5ex,dp=1.125ex,center]{foot_author}%
      \usebeamerfont{author in head/foot}\insertshortauthor \hspace{1pt} (\insertshortinstitute)
    \end{beamercolorbox}%

    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.5ex,dp=1.125ex,center]{foot_title}%
      \usebeamerfont{title in head/foot}\insertshorttitle
    \end{beamercolorbox}%

    \begin{beamercolorbox}[wd=.1\paperwidth,ht=2.5ex,dp=1.125ex,center]{foot_page}%
      \usebeamerfont{title in head/foot}\insertframenumber\,/\,\inserttotalframenumber
    \end{beamercolorbox}
  }%
  \vskip0pt%
}

% ENABLE THIS TO ADD THE SQUARE LOGO TO THE BOTTOM RIGHT HAND CORNER
% OF EVERY SLIDE
%\logo{\includegraphics[height=0.75cm]{gnuradio_logo_icon-square.png}}


%%% Major templating (look for these strings in the Beamer manual for
% descriptions)
\setbeamercolor{normal text}{bg=grlightgrey,fg=black}
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{alerted text}{fg=grdarkorange}
\setbeamercolor{fine separation line}{}
\setbeamercolor{structure}{bg=black, fg=grgrey}
\setbeamercolor{subsection in sidebar}{fg=brown}
\setbeamercolor{subsection in sidebar shaded}{fg=grey}

% Set info about the title page
\setbeamercolor{title}{fg=grdarkorange, bg=grmediumgrey}
\setbeamercolor{titlelike}{fg=grdarkorange}
\setbeamerfont*{title}{series=\bfseries,size=\huge}

% Bullets, etc.
\setbeamercolor*{item}{fg=grdarkorange, bg=white}
% Font colour of the numbers in enumerations:
\setbeamercolor{item projected}{fg=black}

% Frame title fonts and colors
\setbeamercolor{frametitle}{fg=grdarkorange, bg=grmediumgrey}
\setbeamerfont*{frametitle}{series=\bfseries,size=\Large}

% Table of contents
\setbeamertemplate{section in toc}[ball]
\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{section in toc shaded}{fg=grdarkgrey}

% Blocks (boxes)
\setbeamercolor{block title}{bg=grmediumgrey,fg=grdarkorange}
\setbeamerfont{block title}{size={}}
\setbeamercolor{block body alerted}{bg=normal text.bg!90!black}
%\setbeamercolor{block body}{bg=normal text.bg!90!black}
%\setbeamercolor{block body example}{bg=normal text.bg!90!black}
\setbeamercolor{block title alerted}{use={normal text,alerted text},fg=alerted text.fg!75!normal text.fg,bg=normal grmediumgrey}
%\setbeamercolor{block title example}{use={normal text,example text},fg=example text.fg!75!normal text.fg,bg=normal text.bg!75!black}

\mode
<all>
